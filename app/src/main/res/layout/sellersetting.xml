<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:contentDescription="TODO"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintBottom_toTopOf="@+id/textView1"
                tools:srcCompat="@tools:sample/avatars[11]" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Name"
                android:textSize="22dp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/img0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Farm Description \nmore..."
                android:textAlignment="center"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating : 4.5 Stars"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/view1"
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/darker_gray">

                    <TextView
                        android:id="@+id/productname1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="เงาะโรงเรียน"/>

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Product"
                        android:src="@mipmap/ic_launcher"
                        tools:srcCompat="@tools:sample/avatars[2]" />

                    <TextView
                        android:id="@+id/sellq1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="75dp"
                        android:layout_marginBottom="12dp"
                        android:text="ขายไป 10"
                        android:textSize="12dp"
                        app:layout_constraintRight_toLeftOf="@+id/butEdit1"
                        app:layout_constraintStart_toStartOf="@id/img1" />

                    <Button
                        android:id="@+id/butEdit1"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/img1"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="6dp"
                        android:text="@string/edit"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/img1" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view2"
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintLeft_toRightOf="@+id/view1"
                    app:layout_constraintStart_toEndOf="@id/view1">

                    <TextView
                        android:id="@+id/productname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="มะม่วงน้ำดอกไม้"/>
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:src="@mipmap/ic_launcher"
                        tools:srcCompat="@tools:sample/avatars[3]" />

                    <Button
                        android:id="@+id/butEdit2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/img2"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="6dp"
                        android:text="@string/edit"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/img2" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="28dp">

                <RelativeLayout
                    android:id="@+id/view3"
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:background="@android:color/darker_gray">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:contentDescription="Product"
                        android:src="@mipmap/ic_launcher"
                        tools:srcCompat="@tools:sample/avatars[2]" />
                    <Button
                        android:id="@+id/butEdit3"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_alignRight="@id/img3"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="6dp"
                        android:text="@string/edit"
                        android:textSize="12dp"
                        app:layout_constraintStart_toEndOf="@id/img3" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view4"
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintLeft_toRightOf="@+id/view3"
                    app:layout_constraintStart_toEndOf="@id/view3">
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
